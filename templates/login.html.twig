<div class="col-lg-2 col-md-4 col-sm-6 loginBar">
    {% if app.user %}
    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    {% else %}
        <form method="post" action="/account/login">
            <div class="form-group p-2">
                <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            </div>
            <div class="form-group p-2">
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="HasÅ‚o" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <div class="form-group p-2">
                <button class="btn btn-lg btn-warning loginButton" type="submit">
                    Zaloguj
                </button>
            </div>
            <div class="form-group p-2">
                <a class="btn btn-lg btn-facebook loginButton" href="{{ path('connect_facebook_start') }}">
                    Facebook login
                </a>
            </div>
        </form>
    {% endif %}
</div>