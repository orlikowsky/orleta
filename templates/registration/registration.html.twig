{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Rejestracja</h1>

    {{ form_start(registrationForm) }}
    <div class="form-group col-lg-3">
        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'col-lg-12'}}) }}
        {{ form_widget(registrationForm.email) }}
    </div>
    <div class="form-group col-lg-3">
        {{ form_label(registrationForm.password.first, null, {'label_attr': {'class': 'col-lg-12'}}) }}
        {{ form_widget(registrationForm.password.first) }}
    </div>
    <div class="form-group col-lg-3">
        {{ form_label(registrationForm.password.second, null, {'label_attr': {'class': 'col-lg-12'}}) }}
        {{ form_widget(registrationForm.password.second) }}
    </div>
    <div class="form-group col-lg-3">
        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'col-lg-12'}}) }}
        {{ form_widget(registrationForm.agreeTerms) }}
    </div>
    <button class="btn btn-warning">Zarejestruj</button>
    {{ form_end(registrationForm) }}
{% endblock %}
