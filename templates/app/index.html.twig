{% extends 'base.html.twig' %}

{% block title %}Orlęta Łuków{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-social.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" media="screen" href="https://fontlibrary.org/face/bebas" type="text/css"/>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/jquery-3.4.1.min.js') }}"></script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>


{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-3 col-lg-2 col-md-2 col-sm-3 pl-5 pt-2 logo">
                <img src="{{ asset('images/orleta_logo.png') }}">
            </div>
            <div class="col-1 col-lg-1 col-md-1 col-sm-1 logoSmall">
                <img src="{{ asset('images/orleta_logo_2.png') }}">
            </div>
            <div class="col-6 col-lg-7 col-md-7 col-sm-6 pt-5 align-bottom">
                <div class="navbar-brand" style=font-size:3vw;"">ŁUKOWSKI KLUB SPORTOWY ORLĘTA ŁUKÓW</div>
            </div>
            <div class="col-3 col-lg-3 col-md-3 col-sm-3 townLogosBig" align="right">
                <img class="m-2" src="{{ asset('images/herb_miasta.png') }}">
                <img class="m-2" src="{{ asset('images/logo_osir.png') }}">
            </div>
            <div class="col-3 col-lg-3 col-md-3 col-sm-3 townLogosSmall" align="right">
                <img class="m-1" src="{{ asset('images/herb_miasta_s.png') }}">
                <img class="m-1" src="{{ asset('images/logo_osir_s.png') }}">
            </div>
        </div>
        <div class="row headerDown">
            <div class="col-lg-6 col-md-6 col-sm-6 menu"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 menu">

            </div>
        </div>
        </div>
        <div class="row">
            <div class="col-lg-2 col-md-4 col-sm-6 loginBar">
                <form method="post" action="/account/login">
                    <div class="form-group p-2">
                        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group p-2">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Hasło" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <div class="form-group p-2">
                        <button class="btn btn-lg btn-warning loginButton" type="submit">
                            Zaloguj
                        </button>
                    </div>
                    <div class="form-group p-2">
                        <a class="btn btn-lg btn-facebook loginButton" href="{{ path('connect_facebook_start') }}">
                            Facebook login
                        </a>
                    </div>
                </form>
            </div>
            <div class="col-lg-8 col-md-6 col-sm-6">
                <h1 class="ml-5 bodyMiddle">Liga typerów</h1>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-6">

            </div>
        </div>
        <div class="row">
            <div class="col-12 footer" align="center">
                &copy; ŁKS Orlęta Łuków
            </div>
        </div>
    </div>


{% endblock %}
